<h1>Log in</h1>

<%= form_tag(session_path, :method => :post) do %>
  <div class="field">
    <%= label_tag :email, "Username or email" %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
<% end %>

<p>
  No account? <%= link_to "Sign up.", signup_path %>
</p>
