<!DOCTYPE html>
<html>
<head>
  <title>Duubot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="notices">
  <% unless flash.empty? %>
    <% flash.each do |key, msg| %>
     <%= content_tag(:div, :class => "#{key} flash", :content => msg) %>
    <% end %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
